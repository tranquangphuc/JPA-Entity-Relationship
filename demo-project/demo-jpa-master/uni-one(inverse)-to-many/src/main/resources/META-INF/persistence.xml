<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="order_database" transaction-type="RESOURCE_LOCAL">
        <class>jpa.entity.CustomerOrder</class>
        <class>jpa.entity.LineItemKey</class>
        <class>jpa.entity.LineItem</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/order"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
